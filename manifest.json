{
  "manifest_version": 2,

  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "permissions" : [
    "tabs",
    "storage",
    "declarativeContent",
    "https://whybug.com/",
    "http://whybug.com/"
  ],

  "background": { 
    "scripts": ["background.js"] 
  },

  "page_action": {
    "default_icon": "icon1.png",
    "default_title" : "Activate whybug for this website."
  }
}